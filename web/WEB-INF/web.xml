<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>car</servlet-name>
        <servlet-class>cz.carsharing.servlet.CarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>car</servlet-name>
        <url-pattern>/car</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>cz.carsharing.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>truck</servlet-name>
        <servlet-class>cz.carsharing.servlet.TruckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>truck</servlet-name>
        <url-pattern>/truck</url-pattern>
    </servlet-mapping>
</web-app>